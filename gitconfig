[color]
    branch = auto
    diff = auto
    status = auto
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
    removed = red
[alias]
    ci = commit
    cb = rev-parse --abbrev-ref HEAD
    st = status -sb
    br = branch
    co = checkout
    df = diff
    dt = difftool
    lg = log -p
    who = shortlog -s --
    nb = "!sh -c \"git checkout -b $(npx random-word-cli)-$(npx random-word-cli) \" -"
    sb = "!sh -c \"git checkout $(git branch $1 | ipt | sed 's#. ##g')\""
    leaderboard = "!sh -c \"git shortlog -s | sort -nr\""
    review = "!sh -c \"git st | ipt -p | xargs less --tabs=4 -RFX\""
    fix = "!sh -c \"git st | ipt -p | xargs -o vim\""
    trash = "!sh -c \"git st | ipt -p | xargs trash\""
[credential]
    helper = osxkeychain
[core]
    excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX

[push]
    default = simple
[commit]
    gpgsign = true
